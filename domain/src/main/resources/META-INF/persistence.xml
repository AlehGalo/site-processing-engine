<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="informerPersistence"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.jdev.domain.entity.Article</class>
		<class>com.jdev.domain.entity.Site</class>
		<class>com.jdev.domain.entity.Recommendation</class>
		<class>com.jdev.domain.entity.Job</class>
		<class>com.jdev.domain.entity.Authority</class>
		<class>com.jdev.domain.entity.CrawlerError</class>
		<class>com.jdev.domain.entity.PersistentAuditEvent</class>
		<class>com.jdev.domain.entity.PersistentToken</class>
	</persistence-unit>
</persistence>